<div class="container">
  <div class="row">
    <div class="col">
      <% @posts.each do |post| %>
        <div class="card mb-2" style="width: 100%;">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
            <p class="card-subtitle mb-2 text-muted"><%= "Published at " << time_ago_in_words(post.created_at) << " by " << post.user.email %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>